<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    tools:context=".DetailFragment">

    <TextView
        android:id="@+id/crimeTitleDetail"
        style="@style/CrimeDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="4dp"
        android:background="@color/black"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/crime_placeholder"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTextDetail"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_below="@+id/indeksStudent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="311dp"
        android:background="@color/lightblue"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/crime_placeholder"
        android:textColor="?android:textColorSecondary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/indeksStudent"
        style="@style/CrimeDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/crimeTitleDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="76dp"
        android:text="@string/title_placeholder"
        android:textColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />


</RelativeLayout>